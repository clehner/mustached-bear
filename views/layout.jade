doctype 5
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title=title
		meta(name='viewport', content='width=device-width,initial-scale=1')
		
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Kreon:300,400,700|Vollkorn:400italic,700italic,400,700')
		link(rel='stylesheet', href='stylesheets/custom-bootstrap-new.css')
		link(rel='stylesheet', href='wookmark/css/reset.css')
		link(rel='stylesheet', href='wookmark/custom/gridblockstyle.css')
		link(rel='stylesheet', href='stylesheets/style.css')
		style(type='text/css')


		block head
	body
		#container
		
			.navbar 
				.navbar-inner 
					h1.navbar-title Mustached Bear
					form.navbar-form
						input(type='text', maxlength='35', placeholder='#{title}')
						button(type='submit', class='btn') Search
			
			header
				block content
		
			#main(role='main')
				ul#tiles
			
				#loader
					#loaderCircle
			
			footer
		
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
		script(src='wookmark/jquery.wookmark.js')
		script(src='wookmark/custom/loadlogic.js')
			