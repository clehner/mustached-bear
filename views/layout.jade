doctype 5
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title=title
		meta(name='viewport', content='width=device-width,initial-scale=1')
		
		link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Kreon:300,400,700|Vollkorn:400italic,700italic,400,700')
		link(rel='stylesheet', href='stylesheets/custom-bootstrap-new.css')
		link(rel='stylesheet', href='wookmark/css/reset.css')
		link(rel='stylesheet', href='wookmark/custom/gridblockstyle.css')
		link(rel='stylesheet', href='stylesheets/style.css')
		style(type='text/css')

		block head
	body
		#container
		
			.navbar 
				.navbar-inner 
					.img-container
						img(src='images/bear-icon.png')
					.title-container
						h1.navbar-title Mustached Bear
					.form-container
						form.navbar-form
							input(type='text', maxlength='35', placeholder='Type to search')#search
							input(type='image', src='images/searchicon.png').searchicon
			
		
			#main(role='main')
				ul#tiles
			
				#loader
					#loaderCircle
		
		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
		script(src='wookmark/jquery.wookmark.min.js')
		script(src='wookmark/custom/loadlogic.js')